{# templates/quinquenio_solicitud/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Quinquenio Solicitud Details{% endblock %}

{% block body %}
    <h1>Quinquenio Solicitud Details</h1>

    <h2>Quinquenio Meritos</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Organismo</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            {% for merito in quinquenioMeritos %}
                <tr>
                    <td>{{ merito.id }}</td>
                    <td>{{ merito.organismo }}</td>
                    <td>{{ merito.fechaInicio|date('Y-m-d') }}</td>
                    <td>{{ merito.fechaFin|date('Y-m-d') }}</td>
                    <td>{{ merito.estado }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMeritoModal">
        Agregar MÃ©rito
    </button>

    <!-- Modal -->
    <div class="modal fade" id="addMeritoModal" tabindex="-1" aria-labelledby="addMeritoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMeritoModalLabel">Agregar Quinquenio Merito</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(form, {'attr': {'id': 'meritoForm'}}) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('meritoForm');
            form.addEventListener('submit', function(event) {
                event.preventDefault();

                const formData = new FormData(form);
                fetch('{{ path('merito_save') }}', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'success') {
                        alert(data.message);
                        window.location.href = data.redirect;
                    } else {
                        alert(data.message);
                        console.error(data.errors);
                    }
                })
                .catch(error => console.error('Error:', error));
            });
        });
    </script>
{% endblock %}