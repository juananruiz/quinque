{# templates/departamento/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nuevo Departamento{% endblock %}

{% block body %}
    <div class="container">
        <h1>Crear nuevo departamento</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary">Guardar</button>
        {{ form_end(form) }}

        <a href="{{ path('departamento_index') }}" class="btn btn-secondary mt-3">Volver al listado</a>
    </div>
{% endblock %}