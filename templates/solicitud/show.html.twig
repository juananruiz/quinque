{# templates/solicitud/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Solicitud Quinquenio{% endblock %}

{% block body %}
    <h1>Solicitud Quinquenio</h1>

    <h2>Méritos aportados</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Organismo</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            {% for merito in meritos %}
                <tr>
                    <td>{{ merito.id }}</td>
                    <td>{{ merito.organismo }}</td>
                    <td>{{ merito.fechaInicio|date('Y-m-d') }}</td>
                    <td>{{ merito.fechaFin|date('Y-m-d') }}</td>
                    <td>{{ merito.estado }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMeritoModal">
        Agregar Mérito
    </button>

    <!-- Modal -->
    <div class="modal fade" id="addMeritoModal" tabindex="-1" aria-labelledby="addMeritoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMeritoModalLabel">Agregar Mérito</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(form, {'attr': {'id': 'meritoForm', 'action': path('merito_save')}}) }}
                        <input type="hidden" name="solicitud_id" value="{{ solicitud.id }}">
                        <input type="hidden" name="created_at" value="2024-10-10 10:00:00">
                        <div class="mb-3">
                            {{ form_label(form.organismo, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.organismo, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.organismo, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.categoriaId, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.categoriaId, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.categoriaId, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.fechaInicio, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.fechaInicio, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.fechaInicio, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.fechaFin, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.fechaFin, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.fechaFin, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.estado, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.estado, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.estado, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('meritoForm');
            form.addEventListener('submit', function(event) {
                event.preventDefault();

                const formData = new FormData(form);
                fetch('{{ path('merito_save') }}', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'success') {
                        alert(data.message);
                        window.location.href = data.redirect;
                    } else {
                        alert(data.message);
                        console.error(data.errors);
                    }
                })
                .catch(error => console.error('Error:', formData));
            });
        });
    </script>
{% endblock %}