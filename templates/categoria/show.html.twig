{# templates/categoria/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Categoría{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1><i class="fas fa-tag"></i> Detalles de Categoría</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ categoria.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ categoria.nombre }}</td>
                </tr>
            </tbody>
        </table>

        <div class="btn-group">
            <a href="{{ path('categoria_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
            <a href="{{ path('categoria_edit', {'id': categoria.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>
{% endblock %}