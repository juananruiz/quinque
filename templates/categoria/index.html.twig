{% extends 'base.html.twig' %}

{% block title %}Categorías{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1><i class="fas fa-tags text-warning"></i> Categorías</h1>
        
        <table id="categorias" class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
					<th>Abreviatura</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for categoria in categorias %}
                    <tr>
                        <td>{{ categoria.id }}</td>
                        <td>{{ categoria.nombre }}</td>
						<td>{{ categoria.abreviatura }}</td>
                        <td>
                            <a href="{{ path('categoria_edit', {'id': categoria.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('categoria_delete', {'id': categoria.id}) }}" onsubmit="return confirm('¿Está seguro?');" style="display: inline-block">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categoria.id) }}">
                                <button class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('categoria_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Categoría
        </a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#categorias').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                }
            });
        });
    </script>
{% endblock %}
