{# templates/convocatoria/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Editar Convocatoria{% endblock %}

{% block body %}
    <h1>Editar Convocatoria</h1>

    {{ include('convocatoria/_form.html.twig') }}

    <div class="btn-group mt-3">
        <a href="{{ path('convocatoria_index') }}" class="btn btn-secondary">Volver</a>
        
        <form method="post" action="{{ path('convocatoria_delete', {'id': convocatoria.id}) }}" onsubmit="return confirm('¿Está seguro que desea eliminar esta convocatoria?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ convocatoria.id) }}">
            <button class="btn btn-danger">Eliminar</button>
        </form>
    </div>
{% endblock %}