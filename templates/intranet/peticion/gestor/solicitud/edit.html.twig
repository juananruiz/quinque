{# templates/intranet/peticion/solicitud/edit.html.twig #}
{% extends 'intranet/quinque/admin/base.html.twig' %}

{% block title %}Editar Solicitud{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-3">
            <div class="col">
                <h1><i class="fas fa-edit text-warning"></i> Editar Solicitud</h1>
            </div>
        </div>

        {{ include('intranet/peticion/solicitud/_form.html.twig', {'button_label': 'Actualizar'}) }}

        <form method="post" action="{{ path('app_peticion_solicitud_delete', {'id': solicitud.id}) }}" 
              onsubmit="return confirm('¿Está seguro de que desea eliminar esta solicitud?');" 
              class="mt-3">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ solicitud.id) }}">
            <button class="btn btn-danger">
                <i class="fas fa-trash"></i> Eliminar
            </button>
        </form>
    </div>
{% endblock %}
