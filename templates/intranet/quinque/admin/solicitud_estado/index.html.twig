{% extends 'intranet/quinque/admin/base.html.twig' %}

{% block title %}Estados de las Solicitudes{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Estados de las Solicitudes</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Color</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for solicitud_estado in solicitud_estados %}
                <tr>
                    <td>{{ solicitud_estado.id }}</td>
                    <td>{{ solicitud_estado.nombre }}</td>
                    <td>
                        <span class="badge" style="background-color: {{ solicitud_estado.color }}">
                            {{ solicitud_estado.color }}
                        </span>
                    </td>
                    <td>
                        <a href="{{ path('intranet_quinque_admin_solicitud_estado_edit', {'id': solicitud_estado.id}) }}" 
                            class="btn btn-warning btn-sm"><i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No se encontraron registros</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('intranet_quinque_admin_solicitud_estado_new') }}" class="btn btn-success">
            <i class="fas fa-plus"></i> Crear nuevo
        </a>
    </div>
{% endblock %}
