<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="{{ asset('US-favicon-64x64.png') }}" />
        <title>{% block title %}Servicio de Personal Docente - Universidad de Sevilla{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('assets/css/all.min.css') }}" rel="stylesheet">
            <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
            <link href="{{ asset('assets/css/dataTables.bootstrap5.min.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('assets/js/jquery-3.5.1.min.js') }}"></script>
            <script src="{{ asset('assets/js/jquery.dataTables.min.js') }}"></script>
            <script src="{{ asset('assets/js/dataTables.bootstrap5.min.js') }}"></script>
            <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>

        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Universidad de Sevilla</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/convocatoria">Convocatorias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/persona">Solicitantes</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Administración
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" href="{{ path('intranet_quinque_admin_categoria_index') }}">Categorías</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('quinque_departamento_index') }}">Departamentos</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('intranet_quinque_admin_convocatoria_index') }}">Convocatorias</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('quinque_solicitud_estado_index') }}">Estados de Solicitudes</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('quinque_merito_estado_index') }}">Estados de Méritos</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}

        <div class="container mt-4">
            {% for label, messages in app.flashes %}
                <div class="alert alert-{{ label }}">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}

        </div>

        {% block footer %}
            <footer class="footer mt-auto py-3 bg-light">
                <div class="container">
                    <span class="text-muted">Universidad de Sevilla</span>
                </div>
            </footer>
        {% endblock %}
    </body>
</html>