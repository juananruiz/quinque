{% extends 'intranet/quinque/admin/base.html.twig' %}

{% block title %}Categorías{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/dataTables.bootstrap5.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="row mt-3 mb-3">
        <div class="col-6">
            <h1 class="mb-4"><i class="fas fa-tags text-warning"></i> Categorías</h1>
        </div>
        <div class="col-6 text-end">
            <a href="{{ path('quinque_categoria_new') }}" class="btn btn-primary mt-3">
                <i class="fas fa-plus"></i> Agregar Categoría
            </a>
        </div>
        
        <table id="categorias" class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Abreviatura</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for categoria in categorias %}
                    <tr>
                        <td>{{ categoria.id }}</td>
                        <td>{{ categoria.nombre }}</td>
                        <td>{{ categoria.abreviatura }}</td>
                        <td>
                            <a href="{{ path('quinque_categoria_edit', {'id': categoria.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('quinque_categoria_delete', {'id': categoria.id}) }}" onsubmit="return confirm('¿Está seguro?');" style="display: inline-block">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categoria.id) }}">
                                <button class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/js/dataTables.bootstrap5.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#categorias').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                }
            });
        });
    </script>
{% endblock %}
