{% extends 'intranet/quinque/admin/base.html.twig' %}

{% block title %}Estado de Mérito{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Estado de Mérito</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ merito_estado.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ merito_estado.nombre }}</td>
                </tr>
                <tr>
                    <th>Color</th>
                    <td>
                        <span class="badge" style="background-color: {{ merito_estado.color }}">
                            {{ merito_estado.color }}
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('intranet_quinque_admin_merito_estado_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver al listado
        </a>

        <a href="{{ path('intranet_quinque_admin_merito_estado_edit', {'id': merito_estado.id}) }}" class="btn btn-primary">
            <i class="fas fa-edit"></i> Editar
        </a>

        {{ include('intranet/quinque/admin/merito_estado/_delete_form.html.twig') }}
    </div>
{% endblock %}
