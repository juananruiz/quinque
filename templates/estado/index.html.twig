{# templates/estado/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Estados{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1><i class="fas fa-tasks"></i> Estados</h1>
        
        <table id="estados" class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Color</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for estado in estados %}
                    <tr>
                        <td>{{ estado.id }}</td>
                        <td>
                            <span class="badge" style="background-color: {{ estado.color }}">
                                {{ estado.nombre }}
                            </span>
                        </td>
                        <td>{{ estado.color }}</td>
                        <td>
                            <a href="{{ path('estado_edit', {'id': estado.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('estado_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nuevo Estado
        </a>
    </div>
{% endblock %}